@{
    //List<Infrastructure.Entity.Base_Menu> Base_MenuList = ViewBag.Base_MenuList;
    string json = ViewBag.Base_MenuJson;
}

<body class="easyui-layout">
	<div data-options="region:'west',title:'菜单列表',split:true" style="width:250px;">
		<div  class="easyui-panel" style="height:100%">
            <ul class="easyui-tree" 
                data-options="
                data:utils.toTreeData(json,'ID','ParentID','children'),
                animate:true,
                lines:true">
            </ul>
		</div>  
	</div>   
	<div data-options="region:'center',border:false">
		<div id="tabs" class="easyui-tabs" style="width:100%;height:100%">    
		</div> 
	</div> 
</body>

@section Scripts{
<script>
    var json = @(Html.Raw(json));

</script>
}